<html lang="en">
      <%- include("./partials/head.ejs") %>
     <title> Home | <%= title%> </title>
    <body>
         <%- include("./partials/nav.ejs") %>
        <p> <%const test='this is an ejs code for testing' %></p>
            <div class="blogs content">
                <p> <%=test%></p>
                <h2>All Blogs</h2>
                      
                       <% if(blogs.length > 0){ %>
                            <% blogs.forEach(blog =>{ %>
                               <!-- <p><%= blog._id%></p> -->
                               <div class="blog-content">
                             <a href="/blogs/<%= blog._id %>">
                                <h3 class="title">
                                  <%= blog.title %>   
                                </h3>
                           
                                <p class="snippet">
                                   <%= blog.snippet %>
                                </p>
                            </a>
                            </div>
                           <% }) %>
                      <% } else { %>
                       <p>there is no data available to display</p> 
                   <% }
                       %>
                         
            </div>

    </body>
    <%- include('./partials/footer.ejs') %>
</html>